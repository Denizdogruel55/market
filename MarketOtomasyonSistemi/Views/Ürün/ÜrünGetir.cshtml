@model MarketOtomasyonSistemi.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "ÜrünGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Güncelle", "Ürün", FormMethod.Post))
{
    <div>
        @Html.LabelFor(x => x.URUNID)
        @Html.TextBoxFor(x => x.URUNID, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(x => x.URUNAD)
        @Html.TextBoxFor(x => x.URUNAD, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(x => x.MARKA)
        @Html.TextBoxFor(x => x.MARKA, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(x => x.ÜRÜNKATEGORİ)
        @Html.DropDownListFor(x => x.TBLKATEGORİLER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(x => x.Fiyat)
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning" type="submit">Güncelle</button>
}

